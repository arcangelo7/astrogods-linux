{
  "app-id": "it.astrogods.AstroGods",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "25.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "astrogods",
  "finish-args": [
    "--share=ipc",
    "--share=network",
    "--socket=x11",
    "--device=dri",
    "--env=GDK_BACKEND=x11"
  ],
  "modules": [
    {
      "name": "astrogods",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p /app/astrogods",
        "cp astrogods /app/astrogods/",
        "cp -r lib /app/astrogods/",
        "cp -r data /app/astrogods/",
        "chmod 755 /app/astrogods/astrogods",
        "mkdir -p /app/bin",
        "ln -s /app/astrogods/astrogods /app/bin/astrogods",
        "install -Dm644 share/applications/it.astrogods.AstroGods.desktop /app/share/applications/it.astrogods.AstroGods.desktop",
        "install -Dm644 share/metainfo/it.astrogods.AstroGods.metainfo.xml /app/share/metainfo/it.astrogods.AstroGods.metainfo.xml",
        "cp -r share/icons /app/share/"
      ],
      "sources": [
        {
          "type": "archive",
          "only-arches": [
            "x86_64"
          ],
          "url": "https://github.com/arcangelo7/astrogods-app/releases/download/4.6.3/linux-x64-4.6.3.tar.gz",
          "sha256": "a24c93b88cec73ed28885697e28dca3c9b50329fec7b04dd0e368afcfc065e78"
        },
        {
          "type": "archive",
          "only-arches": [
            "aarch64"
          ],
          "url": "https://github.com/arcangelo7/astrogods-app/releases/download/4.6.3/linux-arm64-4.6.3.tar.gz",
          "sha256": "a1d5cf2da1b316b5ee4ef66764e9fbb46102197d2e382be2cbc2dd3299a30fdd"
        }
      ]
    }
  ]
}
